<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharePicture">

    <ImageView
        android:id="@+id/imageViewPictureSelected_share_picture"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="321dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/PostImageSelectedBtn_share_picture"
        android:layout_width="126dp"
        android:layout_height="60dp"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="143dp"
        android:onClick="postImage"
        android:text="Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />

    <EditText
        android:id="@+id/editTextCaption_share_image"
        android:layout_width="349dp"
        android:layout_height="53dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="70dp"
        android:ems="10"
        android:hint="Captain"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/PostImageSelectedBtn_share_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPictureSelected_share_picture"
        app:layout_constraintVertical_bias="0.39" />

    <ImageButton
        android:id="@+id/floatingActionButtonRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="rotateImage"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPictureSelected_share_picture"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPictureSelected_share_picture"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="@+id/imageViewPictureSelected_share_picture"
        app:layout_constraintTop_toTopOf="@+id/imageViewPictureSelected_share_picture"
        app:layout_constraintVertical_bias="0.934"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="314dp"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />


</androidx.constraintlayout.widget.ConstraintLayout>